# Force OpenGL
load-display pandagl

# Window size
win-size 1280 720
win-title Ursina Game

# Fullscreen (0 = windowed, 1 = fullscreen)
fullscreen 0

# Enable textures
textures-power-2 none

# Show frame rate meter (0 = hide, 1 = show)
show-frame-rate-meter 1

# Allow shader generation
basic-shaders-only 0

# Allow multisampling (anti-aliasing)
multisamples 4
